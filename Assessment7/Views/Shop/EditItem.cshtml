@model Assessment7.Models.Inventory
@{
    ViewBag.Title = "EditItem";
}

<h2>EditItem</h2>

<form action="~/Shop/SaveItem" method="post">
    Name: <input type="text" name="Name" value="@Model.Name" placeholder="@Model.Name"/><br />
    Description: <input type="text" name="Description" value="@Model.Description" placeholder="@Model.Description" /><br />
    Quantity: <input type="text" name="Quantity" value="@Model.Quantity" placeholder="@Model.Description" /><br />
    Price: <input type="text" name="Price" value="@Model.Price" placeholder="@Model.Description"/><br />
    <input type="hidden" name="ItemID" value="@Model.ItemID" />

    <button type="submit">Save</button>

</form>